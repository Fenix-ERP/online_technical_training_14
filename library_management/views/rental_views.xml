        <record id="library_rental_map_view" model="ir.ui.view">
            <field name="name">library.rental.map.view</field>
            <field name="model">library.rental</field>
            <field name="arch" type="xml">
                <map res_partner="customer">
                    <field name="book_copy_id" string="Book" />
                    <field name="customer" string="Customer" />
                </map>
