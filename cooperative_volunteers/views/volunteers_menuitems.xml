<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="volunteers_action_window" model="ir.actions.act_window">
            <field name="name">Cooperative Volunteers</field>
            <field name="res_model">volunteers.task</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Task
                </p>
            </field>
        </record>
        
        <menuitem id="menu_volunteers" name="Cooperative Volunteers" sequence="100"
                  web_icon="cooperative_volunteers,static/description/icon.png"/>
        <menuitem id="submenu_volunteers" name="Sub Cooperative Volunteers" parent="menu_volunteers" sequence="100"/>
        <menuitem id="menu_task" name="Task" parent="submenu_volunteers" sequence="1"
                  action="volunteers_action_window"/>
    </data>
</odoo>