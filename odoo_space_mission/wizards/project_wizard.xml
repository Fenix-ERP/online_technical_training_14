<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- Wizard Form View -->
        <record id="space_mission_project_wizard_form_view" model="ir.ui.view">
            <field name="name">space.mission.project.wizard.form.view</field>
            <field name="model">space.project.wizard</field>
            <field name="arch" type="xml">
                <form string="Space Project">
                    <group>
                        <field name="name" />
                        <field name="description" />
                        <field name="mission_id" />
                    </group>
                    <footer>
                        <button name="action_create_project" type="object"
                                string="Create" class="oe_highlight" />
                        or
                        <button special="cancel" string="Cancel" />
                    </footer>
                </form>
            </field>
        </record>
        
        <!-- Create project button in mission action -->
        <record id="create_project_action_window" model="ir.actions.act_window">
            <field name="name">Create Project</field>
            <field name="res_model">space.project.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="model_space_mission" />
        </record>
    </data>
</odoo>