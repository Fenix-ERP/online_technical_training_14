            <field name="state">code</field>
            <field name="code">
                if records:
                    action = records.action_create_project()
            </field>
        </record> -->
        
        <record id="create_project_action_window" model="ir.actions.act_window">
            <field name="name">Create Project</field>
            <field name="res_model">space.project.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model">space.mission</field>            
        </record>
    </data>
</odoo>