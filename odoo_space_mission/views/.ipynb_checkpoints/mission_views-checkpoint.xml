<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="space_mission_mission_form_view" model="ir.ui.view">
            <field name="name">space.mission.mission.form.view</field>
            <field name="model">space.mission</field>
            <field name="arch" type="xml">
                <form string="Space Mission Form">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="spaceship_id" />
                                <field name="fuel_amount" />
                                <field name="engines_number" />
                            </group>
                            <group>
                                <field name="launch_date" />
                                <field name="return_date" />
                            </group>
                        </group>
                        <notebook name="main_book">
                            <page name="crew_members_page" string="Crew Members">
                                <field name="crew_members">
                                    <tree editable="bottom">
                                        <field name="name" />
                                        <field name="phone" />
                                        <field name="email" />
                                        <field name="city" />
                                    </tree>
                                </field>
                            </page>
                            <page name="projects" string="Projects">
                                <field name="project_ids" readonly="1">
                                    <tree>
                                        <field name="name" />
                                        <field name="date_start" />
                                        <field name="date" />
                                        <field name="description" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <label for="safety_features"/>
                        <field name="safety_features" />
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Tree View -->
        <record id="space_mission_mission_tree_view" model="ir.ui.view">
            <field name="name">space.mission.mission.tree.view</field>
            <field name="model">space.mission</field>
            <field name="arch" type="xml">
                <tree string="Space Missions List">
                    <field name="name" />
                    <field name="spaceship_id" />
                    <field name="launch_date" />
                    <field name="return_date" />
                    <field name="crew_members" widget="many2many_tags" />
                </tree>
            </field>
        </record>
        
        <!-- Graph View -->
        <record id="space_mission_mission_graph_view" model="ir.ui.view">
            <field name="name">space.mission.mission.graph.view</field>
            <field name="model">space.mission</field>
            <field name="arch" type="xml">
                <graph string="Space Mission">
                    <field name="name"/>
                    <field name="launch_date" />
                    <field name="return_date" />
                    <field name="fuel_amount" type="measure"/>
                </graph>
            </field>
        </record>
        
